<section class='w-full lg:w-1/2'>
	<div class='lg:m-6 mx-auto my-6 max-w-lg rounded overflow-hidden shadow-lg bg-purple-100'>
		<div class='px-6 py-4 my-8'>
			<a href='/blog/{{id}}'>
				<div class='font-bold text-xl mb-2'>{{title}}</div>
			</a>
			<p class='text-gray-700 text-base'>{{blog_content}}</p>
		</div>
		<div class='px-6 pt-4 pb-2'>
			<a
				href='/tags/{{tags}}'
				class='inline-block bg-purple-200 hover:bg-purple-400 rounded-full px-3 py-1 text-sm font-semibold text-purple-700 mr-2 mb-2'
			>#{{tags}}</a>
		</div>
	</div>

</section>